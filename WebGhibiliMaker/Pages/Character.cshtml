@page
@using WebGhibiliMaker.Models
@model WebGhibiliMaker.Pages.CharacterModel
@{
    ViewData["Title"] = "Character List";
}

<div class="text-center">
    <h2 class="display-5" id="mainHeader">Character List ðŸŽ¥</h2>
</div>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <label asp-for="NewCharacter.Name">Name</label>
        <input type="text" asp-for="NewCharacter.Name" class="col-2">
        <label asp-for="NewCharacter.Description">Description</label>
        <input type="text" asp-for="NewCharacter.Description" class="col-2">
        <label asp-for="NewCharacter.Image">Image</label>
        <input type="text" asp-for="NewCharacter.Image" class="col-2">

        <button class="btn btn-primary">Add</button>
    </div>
</form>
<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">gender</th>
            <th scope="col">Hair Color</th>
        </tr>
    </thead>
    @foreach (var character in Model.Characters)
    {
        <tr>
            <td>@character.Name</td>
            <td>@character.Description</td>
            <td>
                <img src="@character.Image" alt=""/></td>
           
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@character.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
