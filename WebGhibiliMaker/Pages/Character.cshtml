@page
@using WebGhibiliMaker.Models
@model WebGhibiliMaker.Pages.CharacterModel
@{
    ViewData["Title"] = "Character List";
}

<h1>Character List ðŸŽ¥</h1>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <label asp-for="NewCharacter.Name">Name</label>
        <input type="text" asp-for="NewCharacter.Name" class="mr-6">
        <label asp-for="NewCharacter.Age">Age</label>
        <input type="text" asp-for="NewCharacter.Age" class="mr-6">
        <label asp-for="NewCharacter.Gender">Gender</label>
        <label asp-for="NewCharacter.HairColor">Hair Color</label>
        <input type="text" asp-for="NewCharacter.HairColor" class="mr-6">
        <label asp-for="NewCharacter.EyeColor">Eye Color</label>
        <input type="text" asp-for="NewCharacter.EyeColor" class="mr-6">

        <button class="btn btn-primary">Add</button>
    </div>
</form>
<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">gender</th>
            <th scope="col">Hair Color</th>
            <th scope="col">Eye Color</th>
        </tr>
    </thead>
    @foreach (var character in Model.Characters)
    {
        <tr>
            <td>@character.Name</td>
            <td>@character.Age</td>
            <td>@character.Gender</td>
            <td>@character.HairColor</td>
            <td>@character.EyeColor</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@character.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
